{
  "name": "Vantage Zero Optimizer",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bookworm",
  "customizations": {
    "vscode": {
      "extensions": ["ms-python.python", "ms-python.vscode-pylance"]
    }
  },
  "updateContentCommand": "pip3 install --user -r requirements.txt && pip3 install --user streamlit scipy",
  "postAttachCommand": "streamlit run app.py --server.port 8501 --server.address 0.0.0.0",
  "forwardPorts": [8501],
  "portsAttributes": {
    "8501": {
      "label": "Vantage UI",
      "onAutoForward": "openPreview"
    }
  }
}
